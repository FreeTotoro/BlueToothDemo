<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/common_selector"
        android:orientation="vertical">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@color/common_stroke"/>
        <ListView 
	        android:id="@+id/person_list"
	        android:layout_width="match_parent" 
	        android:layout_height="match_parent"
	        style="@style/left_right__margin"
	        android:layout_marginTop="10dp">
        
    </ListView>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp" 
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/common_selector">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_into"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@color/common_stroke"/>
        <TextView 
            android:id="@+id/name_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/left_right__margin"
            android:layout_marginTop="20dp"/>
        <ListView 
            android:id="@+id/phone_number_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/left_right__margin"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <TextView 
            android:id="@+id/organization_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/left_right__margin"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    
</LinearLayout>